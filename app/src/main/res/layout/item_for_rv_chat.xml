<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_chat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/ic_baseline_fiber_manual_record_24"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_chat"
        app:layout_constraintRight_toRightOf="@id/profile_image_chat"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/online_1"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/end_sms"
        android:id="@+id/display_name_chat"
        android:maxLength="20"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Akmal Valiev"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/profile_image_chat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:maxLength="20"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/end_sms"
        android:layout_marginLeft="20dp"
        android:textSize="13sp"
        android:textColor="#00E5FF"
        android:text="Salom"
        app:layout_constraintLeft_toRightOf="@id/profile_image_chat"
        app:layout_constraintTop_toBottomOf="@id/display_name_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="10sp"
        android:text="12.12.2022 00:45"
        android:id="@+id/time_end_sms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>